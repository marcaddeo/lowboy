{
  "scripts": {
    "build": "npm run build:js; npm run build:css",
    "build:js": "tsc --noEmit && node esbuild.mjs",
    "build:css": "tailwindcss -i css/main.css -o dist/main.css",
    "watch:js": "WATCH=1 npm run build:js",
    "watch:css": "npm run build:css -- --watch",
    "watch": "concurrently --kill-others \"npm run watch:js\" \"npm run watch:css\""
  },
  "devDependencies": {
    "@types/alpinejs": "^3.13.10",
    "@types/alpinejs__focus": "^3.13.4",
    "concurrently": "^9.0.1",
    "esbuild": "0.24.0",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@alpinejs/focus": "^3.14.3",
    "alpinejs": "^3.14.3",
    "htmx-ext-sse": "^2.2.2",
    "htmx.org": "^2.0.3"
  }
}
